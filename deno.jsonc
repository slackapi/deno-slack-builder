{
  "fmt": {
    "files": {
      "include": ["src"]
    }
  },
  "lint": {
    "files": {
      "include": ["src"]
    }
  },
  "tasks": {
    "test": "deno fmt --check && deno lint && deno test --allow-read src",
    "coverage": "deno test --coverage=.coverage --allow-read src && deno coverage --exclude=fixtures --exclude=test .coverage"
  }
}
